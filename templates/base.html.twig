{% include 'menu.html.twig' %}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
							<style>
		body {
    		height: 100%;
		}

		html {
    		display: table;
    		margin: auto;
		}

		body {
			font-family: Arial, Helvetica, sans-serif;
    		display: table-cell;
    		vertical-align: middle;
		}
		table{
			margin: 10px;
			text-align: center;
			background-color: cyan;
			box-shadow:  5px 5px 5px midnightblue;
		}
		th{
			background-color: white;
		}
		tr{
			background-color: white;
		}
			body{
				background-color: cyan;
			}
			th{
				border:3px solid black;
			}
			td{
				border:3px solid black;
			    padding: 28px;
			}
			tr:hover {
				background-color: cyan;
			}
			ul {
				position: sticky;
				list-style-type: none;
				margin: 0;
				padding: 0;
				overflow: hidden;
			}

			li {
				border-right: 2px solid #FF5F9E;
  				float: right;
			}

			li a {
  			display: block;
 			color: Black;
  			text-align: center;
  			padding: 14px 16px;
  			text-decoration: none;
			margin: 20px;
			background: #F7C8E0;
			width:70px;height:40px;line-height:42px;padding:14px 16px;border:none;
			border-radius:10px
			}
				li a:before,
				li a:after{position:absolute;content:"";
				right:0;top: 0;;background:red;
				transition:all 1s ease}
				li a:before{height:0%;width:2px}
				li a:after{width:0%;height:2px}
				li a:hover{background:#F7C8E0;box-shadow:5px 5px 5px midnightblue;}
				li a:hover:before{height:100%}
				li a:hover:after{width:100%}

			.asm{
				margin: 20px;
				width: 100%;
				background:rgb(0,172,238);
				background: #F7C8E0;
				width:100px;height:40px;line-height:42px;padding:14px 16px;border:none;
				border-radius:10px
			}
			.asm:before, .asm:after{
				position:absolute;content:"";
				right:0;top:0;background:red;
				transition:all 1s ease;
			}
			.asm:before{
				height:0%;width:2px
				}
			.asm:after{
				width:0%;height:2px
				}
			.asm:hover{
				background:#F7C8E0;box-shadow:5px 5px 5px midnightblue;
				}
			.asm:hover:before{
				height:100%
				}
			.asm:hover:after{
				width:100%
			}
			.asm{
					font-weight: bold;
				}
			h1{
				text-align: center;
				color: Black;	
				margin: 0px;
			}
			p{
				text-align: center;
			}
			h4{
				text-align: center;
			}
				.btn{background:rgb(0,172,238);
				background: #F7C8E0;
				width:100px;height:40px;line-height:42px;padding:0;border:none}
				.btn:before,
				.btn:after{position:absolute;content:"";
				right:0;top:0;background:red;
				transition:all 1s ease}
				.btn:before{height:0%;width:2px}
				.btn:after{width:0%;height:2px}
				.btn:hover{background:#F7C8E0;box-shadow:5px 5px 5px midnightblue;}
				.btn:hover:before{height:100%}
				.btn:hover:after{width:100%}
				.btn{
					border-radius: 10px;
					font-weight: bold;
				}
				
			</style>
		{% endblock %}
	</head>
	<body>
		{% block body %}{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
