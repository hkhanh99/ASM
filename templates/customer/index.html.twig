{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>BirthDate</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customer %}
            <tr>
                <td>{{ customer.id }}</td>
                <td>{{ customer.Name }}</td>
                <td>{{ customer.BirthDate ? customer.BirthDate|date('Y-m-d') : '' }}</td>
                <td>{{ customer.Phone }}</td>
                <td>
                    <a class="asm" href="{{ path('customer_show', {'id': customer.id}) }}">Show</a>
                    <a class="asm" href="{{ path('customer_edit', {'id': customer.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p><a class="asm" href="{{ path('customer_new') }}">Create new</a></p>
{% endblock %}
